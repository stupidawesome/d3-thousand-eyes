{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "strict": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "plugins": [
            {
                "name": "tslint-language-service",
                "configFile": "tslint.json",
                "disableNoUnusedVariableRule": true
            }
        ],
        "baseUrl": "./src",
        "paths": {
            "@they/*": ["app/*"],
            "@they/environment": ["environments/environment"],
            "@they/core/*": ["app/core/*"],
            "@they/shared/*": ["app/shared/*"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "preserveWhiteSpace": false
    }
}
